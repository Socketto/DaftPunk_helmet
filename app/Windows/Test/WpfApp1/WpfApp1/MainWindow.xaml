<Window
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid x:Name="grid1">
        <Button
            Width="119"
            Height="32"
            Margin="10,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="Open" />
        <Button
            Width="96"
            Height="32"
            Margin="154,51,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_1"
            Content="Close" />
        <TextBox
            x:Name="TextLog"
            Width="508"
            Height="390"
            Margin="274,19,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Visible" />
        <ComboBox
            x:Name="ComboColor"
            Width="120"
            Margin="10,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="96"
            Height="22"
            Margin="154,103,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_8"
            ToolTip="Send change color command.">
            <Image Source="/WpfApp1;component/Resources/Technology.png" />
        </Button>
        <ComboBox
            x:Name="ComboBlinkRGB"
            Width="120"
            Margin="10,147,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="96"
            Height="22"
            Margin="154,147,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_9"
            Content="SET_BLINK" />
        <Button
            Width="49"
            Height="19"
            Margin="201,195,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_2"
            Content="Read" />
        <Button
            Width="49"
            Margin="201,232,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_3"
            Content="Write" />
        <TextBox
            x:Name="Addressbyte"
            Width="57"
            Height="19"
            Margin="0,195,663,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Text="0"
            TextWrapping="Wrap" />
        <Label
            Height="29"
            Margin="10,192,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Address:" />
        <TextBox
            x:Name="Valuebyte"
            Width="57"
            Height="20"
            Margin="72,232,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="0"
            TextWrapping="Wrap" />
        <Label
            Margin="10,229,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Value:"
            RenderTransformOrigin="0.761,0.529" />
        <TextBox
            x:Name="PortName"
            Width="68"
            Height="18"
            Margin="10,19,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="COM6"
            TextWrapping="Wrap" />
        <Button
            Width="85"
            Margin="175,287,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_4"
            Content="From text file"
            Tag="txt" />
        <Button
            Width="85"
            Margin="175,324,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_4"
            Content="From binary file"
            RenderTransformOrigin="0.553,2.744"
            Tag="bin" />
        <Button
            Width="125"
            Height="20"
            Margin="22,287,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_5"
            Content="Read entire EEPROM" />
        <TextBox
            x:Name="SendText"
            Width="125"
            Height="23"
            Margin="22,356,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Testo"
            TextWrapping="Wrap" />
        <Button
            Width="85"
            Margin="175,359,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_SendText"
            Content="SendText"
            RenderTransformOrigin="0.553,2.744"
            Tag="bin" />
    </Grid>
</Window>
